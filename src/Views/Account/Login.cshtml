@model LoginViewModel
@{
    ViewData["Title"] = "Login";
    ViewData["Description"] = $"Sign in to the website";
}

@section head {
    <link rel="stylesheet" href="~/css/login.scss" />
}

<form method="post" id="login" aria-labelledby="legend" asp-route-returnUrl="@ViewData["ReturnUrl"]">
    <div asp-validation-summary="All"></div>
    <fieldset>
        <legend id="legend">Sign in</legend>
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text" id="inputGroup-sizing-default">UserName</span>
            </div>
            <input type="text" asp-for="UserName" class="form-control" autofocus aria-label="UserName" aria-describedby="inputGroup-sizing-default">
        </div>

        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text" id="inputGroup-sizing-default"> Password </span>
            </div>
            <input type="password" asp-for="Password" class="form-control" required aria-label="Password" aria-describedby="inputGroup-sizing-default">
        </div>

        
        <input class="auto-login" type="checkbox" aria-label="Checkbox for following text input" asp-for="RememberMe" />
        <label asp-for="RememberMe">Remember me</label>
        <div>
            <input class="btn btn-primary" type="submit" value="Sign in">
        </div>
    </fieldset>
</form>